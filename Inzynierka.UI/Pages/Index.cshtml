@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<header class="bg-primary text-white text-center py-5">
    <h1>Witamy w Material Manager!</h1>
    <p class="lead">Twoje narzędzie do zarządzania materiałami budowlanymi</p>
</header>

<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <h2>📊 Efektywne Zarządzanie Materiałami</h2>
            <p>Material Manager to aplikacja ułatwiająca monitorowanie zużycia materiałów w projektach budowlanych.</p>
            <ul>
                <li>Dodawanie i edycja materiałów</li>
                <li>Generowanie raportów PDF</li>
                <li>Dodawanie załączników (faktury, paragony)</li>
                <li>Łatwe zarządzanie projektami</li>
            </ul>
            <a href="#about" class="btn btn-primary">Dowiedz się więcej</a>
        </div>
        <div class="col-md-6 text-center">
            <img src="https://via.placeholder.com/400" alt="Material Manager" class="img-fluid rounded">
        </div>
    </div>
</div>
