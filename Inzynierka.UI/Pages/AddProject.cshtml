@page
@model AddProjectModel
@{
    ViewData["Title"] = "Add Project";
}

<h2>Add New Project</h2>

<form method="post">
    <div class="form-group">
        <label for="Name">Nazwa projektu</label>
        <input type="text" id="Name" name="Name" asp-for="NewProject.Name" class="form-control" required />
        <span asp-validation-for="NewProject.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Opis</label>
        <textarea id="Description" name="Description" asp-for="NewProject.Description" class="form-control"></textarea>
        <span asp-validation-for="NewProject.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Dodaj projekt</button>
</form>

@if (Model.ErrorMessage != string.Empty)
{
    <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
}
